<div class="flex justify-center items-center mt-8">
    <div>
        <MudText Style="font-size:40px ;color:black"> @HeaderText </MudText>
    </div>
</div>

<MudGrid Class="py-8" Justify="Justify.Center">

    <div class="wrapper">
        <ul class="products">
            @foreach (var item in responseBookItem)
            {
                <MudItem md="3">
                    <li>
                        <div class="product-item">
                            <div class="product-top">
                                <a href="#" class="product-thumb">
                                    <img src="@item.ImageUrl" />
                                </a>
                                <a href="payment" class="buy-now">Mua Ngay</a>
                            </div>
                            <div class="product-info">
                                <a href="#">@item.Title</a>
                                <div class="product-price">@item.Price đ</div>
                            </div>
                        </div>
                    </li>
                </MudItem>
            }
        </ul>
    </div>
    <div style="padding-top:7px; margin-left: 990px;">
        <a href="/Product">
            <div class="flex items-center justify-end mr-96 text-red-600 text-md no-underline">
                Xem thêm
                <MudIcon Icon="@Icons.Material.Filled.ArrowForwardIos" Style="font-size: medium; margin-right: 10px" />
                <MudIcon Icon="@Icons.Material.Filled.ArrowForwardIos" Style="font-size: medium; margin-left: -17px" />
            </div>
        </a>
    </div>

</MudGrid>

